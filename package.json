{
  "name": "calculadora-teste",
  "version": "1.0.0",
  "description": "Calculadora com testes automatizados",
  "main": "script.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit.test.js",
    "test:integration": "jest tests/integration.test.js",
    "test:e2e": "jest tests/e2e.test.js",
    "test:coverage": "jest --coverage --collectCoverageFrom='!**/node_modules/**' --collectCoverageFrom='!**/tests/**' --collectCoverageFrom='!**/script.js'",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "collectCoverageFrom": [
      "script.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "script.js"
    ]
  }
}